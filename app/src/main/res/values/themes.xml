    <style name="Button.Square" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item> <!-- Adjust corner radius here -->
    </style>

    <style name="SquareButtonStyle" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/Button.Square</item>
    </style>

    <style name="CustomCalendarView" parent="Theme.Material3.DayNight">
        <item name="android:dateTextAppearance">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearance.Material3.LabelMedium
        </item>
        <item name="android:focusedMonthDateColor">@color/black</item>
        <item name="android:selectedWeekBackgroundColor">@color/white</item>
    </style>
    <style name="fullscreenalert" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

